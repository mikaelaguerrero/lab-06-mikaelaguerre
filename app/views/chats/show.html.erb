<p style="color: green"><%= notice %></p>

<hr>
<h2>Participants:</h2>
<%= render @chat %>
<br>

<div>
  <%= link_to "Back to chats", chats_path %>
</div>
<br>

<h2>Messages in this chat:</h2>
<ul>
  <% @chat.messages.recent_first.each do |message| %>
    <li>
      <strong><%= message.user.email %>:</strong> <%= message.body %> â€”
      <%= link_to "View", message_path(message) %>
    </li>
  <% end %>
</ul>

<hr>

<h2>Send a message:</h2>

<%= form_with(model: [@chat, Message.new], local: true) do |form| %>
  <div>
    <%= form.label :body, "Message" %><br>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit "Send" %>
  </div>
<% end %>
