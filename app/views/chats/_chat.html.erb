<p>
  <strong>Sender:</strong>
  <%= chat.sender.email %>
</p>

<p>
  <strong>Receiver:</strong>
  <%= chat.receiver.email %>
</p>

<% unless current_page?(chat_path(chat)) %>
  <p>
    <%= link_to "Show this chat", chat_path(chat) %> |
    <%= link_to "Edit", edit_chat_path(chat) %>
  </p>
<% end %>

<hr>
